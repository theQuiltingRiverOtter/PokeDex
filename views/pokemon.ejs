<%- include('partials/head') %>

    <div class="row">
        <div class="col s12 m3">
            <div class="card">
                <div class="card-image">
                    <img class='responsive-img' src=<%=data.image%>>
                    <span class="card-title indigo-text text-darken-4">
                        <%= data.name %>
                    </span>
                    <span class="card-content indigo-text text-darken-4">Type: <%= data.type %></span>
                </div>

                <div class="card-action">
                    <p>Abilities</p>
                    <% data.abilities.forEach(ability=> { %>
                        <a href="#">
                            <%= ability.ability.name %>
                        </a>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>




    </body>

    </html>